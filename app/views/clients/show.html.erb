<% provide(:title, @client.full_name) %>
<h2><%= @client.full_name %></h2>

<% if @accounts.empty? %>
  <h2><%= t(:no_items_found) %></h2>
<%  else %>
  <h2><%= t(:list_all, model: Account.model_name.human.pluralize) %></h2>
  <table class="table table-striped">
    <thead>
      <tr>        
        <th style="width: 70%"><%= t('activerecord.attributes.account.acc_number') %></th>
        <th style="width: 10%"><%= t(:account_balance) %></th>
        <th style="width: 10%"></th>
        <th style="width: 10%"></th>
      </tr>
    </thead>
    <tbody>
      <%= render @accounts %>
    </tbody>
  </table>
  <%= will_paginate @accounts %>  
<%end%>

