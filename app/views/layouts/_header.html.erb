<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to t(:base_title), root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to t('links.home'), root_path %></li>
          <% if signed_in? %>
            <li><%= link_to t('links.operations'), operations_path %></li>
            <li><%= link_to t('links.clients'), clients_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t('links.account') %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t('links.profile'), current_user %></li>
                <li><%= link_to t('links.settings'), edit_admin_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t('links.sign_out'), signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t('links.sign_in'), signin_path %></li>
          <% end %>

        </ul>
      </nav>
    </div>
  </div>
</header>
