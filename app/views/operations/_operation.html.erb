<tr>
  <td><%= l(operation.value_date)%></td>
  <td><%= operation.operation_type%></td>
  <td><%= number_with_precision(operation.sum, precision: 2) %></td>
  <td><%= number_with_precision(operation.rate, precision: 2)%></td>
  <td><%= l(operation.close_date) if operation.close_date %></td>
  <td><%= operation.duration%></td>
  <td><%= number_with_precision(operation.interests, precision: 2)%></td>
  <td><%= number_with_precision(operation.withholding, precision: 2)%></td>
  <td><%= number_with_precision(operation.total, precision: 2)%></td>
  <td><%= link_to t('links.edit'), edit_account_operation_path(operation.account, operation)%></td>
  <td><%= link_to t('links.delete'), account_operation_path(operation.account, operation), method: :delete, confirm: t(:are_you_sure)%></td>
</tr>