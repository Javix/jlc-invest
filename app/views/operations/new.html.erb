<% provide(:title, t(:new, model: Operation.model_name.human)) %>
<h1><%= t(:new, model: Operation.model_name.human) %></h1>


<div class="row">
  <div class="span6 offset6" style="text-align: right;  background-color: #D9EDF7;">
    <%= t('activerecord.models.account') %>:<%= @account.acc_number %>
  </div>

  <div class="span6 offset6" style="text-align: right;  background-color: #F2DEDE;">
    <%= t(:account_balance) %>:<%= number_to_currency(@balance) %>
  </div>
</div>

<div class="row">
  <div class="span6 offset6">
    <%= form_for([@account, @operation]) do |f| %>
        <%= render 'fields', f: f %>
        <%= f.submit class: "btn btn-large btn-primary" %>
    <% end %>
    <%= link_to t('links.back_to_account'), @account %>
  </div>
</div>
