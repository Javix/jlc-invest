= provide(:title, t(:connection))
h1 = t(:connection)

= form_for(:session, url: sessions_path, html: {class: 'form-signin'}) do |f|
  = f.label :email, t('activerecord.attributes.admin.email')
  = f.text_field :email, class: 'form-control'

  = f.label :password, t('activerecord.attributes.admin.password')
  = f.password_field :password, class: 'form-control'

  = f.submit  t('links.sign_in'), class: "btn btn-large btn-primary"
